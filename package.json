{
  "name": "ubahnchen",
  "version": "0.0.1",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && del-cli \"**/.turbo\" -d",
    "purge": "yarn clean && del-cli \"**/node_modules\" node_modules -d",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint --",
    "lintall": "eslint . --quiet --fix --ext .js,.ts,.jsx,.tsx,.html,.vue,.md,.json,.sql,.mjs,.cjs",
    "ncu": "npx npm-check-updates --workspaces --upgrade --root",
    "depcheck": "lerna exec --no-bail --stream -- depcheck",
    "sort-packages": "npx sort-package-json \"package.json\" \"**/*/package.json\"",
    "test": "node --experimental-vm-modules --no-warnings node_modules/.bin/jest",
    "test-coverage": "yarn test --coverage",
    "turbo-test": "turbo run test"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@ubahnchen/cli": "*",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "babel-preset-typescript": "^7.0.0-alpha.19",
    "del-cli": "^5.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "esm": "^3.2.25",
    "jest": "30.0.0-alpha.2",
    "jsdom": "^24.0.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lerna": "^8.0.2",
    "npm-check-updates": "^16.14.14",
    "prettier": "^3.2.5",
    "prettier-plugin-sql-cst": "^0.11.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.1",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": {
    "packages": [
      "_apps/*",
      "libs/*",
      "packages/*",
      "tests/*"
    ]
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=10"
  },
  "volta": {
    "node": "18.18.2"
  }
}
