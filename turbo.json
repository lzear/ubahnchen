{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "download": {
      "outputs": ["dist/zip/**"],
      "dependsOn": []
    },
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "api/**",
        "public/build/**"
      ],
      "dependsOn": ["^build", "json-graph"]
    },
    "json-graph": {
      "outputs": [],
      "dependsOn": ["build-sqlite"]
    },
    "build-sqlite": {
      "outputs": [],
      "dependsOn": ["download"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "depcheck": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
