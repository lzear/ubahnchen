{
  "extends": "@ubahnchen/tsconfig/base.json",
  "compilerOptions": {
    "allowJs": true,
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.json",
    ".*.cjs",
    "**/*"
  ],
  "exclude": ["node_modules"]
}
