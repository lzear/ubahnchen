{
  "extends": "@ubahnchen/tsconfig/base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "allowJs": true,
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.json",
    ".*.cjs",
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
